<h4 class="title">Create New User</h4>

<%= render 'shared/errors' %>

<div style="width: 25%; margin: auto;">
  <%= form_with model: @user, url: users_path do |form| %>

    <div class="mb-3">
      <%= form.label :username, class: 'form-label' %>
      <%= form.text_field :username, class: 'form-control' %>
      <div class="form-text">NOTICE: username cannot be modified after user created.</div>
    </div>

    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <%= form.submit 'Create User', class: 'btn btn-primary' %>
    <%= link_to 'Back', users_path, type: 'button', class: 'btn btn-secondary' %>

  <% end %>
