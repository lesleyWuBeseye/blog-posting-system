<h4 class="title">User List</h4>

<%= link_to 'Create User', new_user_path, type: 'button', class: 'btn btn-primary create-btn' %>

<table class="table table-hover">
  <thead class="table-light">
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Edit', edit_user_path(user), type: 'button', class: 'btn btn-primary create-btn' %>
        <%= link_to 'Delete', user_path(user),
              data: {confirm: "Are you sure to delete #{user.username}?"}, method: :delete,
              type: 'button', class: 'btn btn-secondary create-btn' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
